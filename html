    <script>
    // 1. åœ–ç‰‡è³‡æ–™é™£åˆ—ï¼šç¸®åœ– (ç”¨æ–¼é é¢å±•ç¤º) å’Œ å®Œæ•´åœ–ç‰‡ (ç”¨æ–¼ç‡ˆç®±å±•ç¤º)
    let currentLightboxIndex = 0;
    
    // **è«‹å°‡é€™äº› URL æ›¿æ›ç‚ºä½ çš„å¯¦éš›åœ–ç‰‡ç¶²å€**
    const illustrationThumbs = [
        'https://github.com/CH-Peggy/Illustration-portfolio-/blob/master/IMG_1321.PNG?raw=true', // ç¸®åœ– 1
        'https://github.com/CH-Peggy/Illustration-portfolio-/blob/master/IMG_1288.PNG?raw=true', // ç¸®åœ– 2
        'https://github.com/CH-Peggy/Illustration-portfolio-/blob/master/IMG_0957.PNG?raw=true'  // ç¸®åœ– 3
    ];
    
    const illustrationFulls = [
        'https://github.com/CH-Peggy/Illustration-portfolio-/blob/master/IMG_1321.PNG?raw=true', // å®Œæ•´åœ– 1
        'https://github.com/CH-Peggy/Illustration-portfolio-/blob/master/IMG_1288.PNG?raw=true', // å®Œæ•´åœ– 2
        'https://github.com/CH-Peggy/Illustration-portfolio-/blob/master/IMG_0957.PNG?raw=true'  // å®Œæ•´åœ– 3
    ];

    function showPage(pageId) {
        const pages = document.querySelectorAll('.page');
        pages.forEach(page => page.classList.remove('active'));
        document.getElementById(pageId).classList.add('active');
        
        const navLinks = document.querySelectorAll('.nav-link');
        navLinks.forEach(link => link.classList.remove('active'));
        document.querySelector(`[data-page="${pageId}"]`).classList.add('active');
        
        if (window.innerWidth <= 768) {
            closeMenu();
        }
        
        window.scrollTo(0, 0);
    }

    // æ ¸å¿ƒä¿®æ”¹ï¼šæ‰“é–‹ç‡ˆç®±æ™‚é¡¯ç¤ºå®Œæ•´åœ–ç‰‡
    function openLightbox(index) {
        currentLightboxIndex = index;
        const lightbox = document.getElementById('lightbox');
        const content = document.getElementById('lightbox-content');
        
        // æ›¿æ›å…§å®¹ç‚º <img> æ¨™ç±¤ï¼Œä½¿ç”¨å®Œæ•´åœ–ç‰‡ç¶²å€
        content.innerHTML = `<img src="${illustrationFulls[index]}" alt="Illustration ${index + 1}" class="lightbox-image">`;
        
        lightbox.classList.add('active');
        document.body.style.overflow = 'hidden';
    }

    function closeLightbox(event) {
        if (event.target.id === 'lightbox' || event.target.classList.contains('lightbox-close')) {
            const lightbox = document.getElementById('lightbox');
            lightbox.classList.remove('active');
            document.body.style.overflow = 'auto';
        }
    }

    // æ ¸å¿ƒä¿®æ”¹ï¼šå°èˆªç‡ˆç®±æ™‚é¡¯ç¤ºä¸‹ä¸€å¼µå®Œæ•´åœ–ç‰‡
    function navigateLightbox(direction, event) {
        event.stopPropagation();
        currentLightboxIndex += direction;
        // å¾ªç’°é‚è¼¯ä½¿ç”¨å®Œæ•´åœ–ç‰‡é™£åˆ—çš„é•·åº¦
        if (currentLightboxIndex < 0) {
            currentLightboxIndex = illustrationFulls.length - 1;
        } else if (currentLightboxIndex >= illustrationFulls.length) {
            currentLightboxIndex = 0;
        }
        const content = document.getElementById('lightbox-content');
        
        // æ›¿æ›å…§å®¹ç‚ºæ–°çš„ <img> æ¨™ç±¤
        content.innerHTML = `<img src="${illustrationFulls[currentLightboxIndex]}" alt="Illustration ${currentLightboxIndex + 1}" class="lightbox-image">`;
    }

    function toggleMenu() {
        const sidebar = document.getElementById('sidebar');
        sidebar.classList.toggle('active');
    }

    function closeMenu() {
        if (window.innerWidth <= 768) {
            const sidebar = document.getElementById('sidebar');
            sidebar.classList.remove('active');
        }
    }

    document.querySelector('.main-content').addEventListener('click', function() {
        if (window.innerWidth <= 768) {
            closeMenu();
        }
    });

    // ESC éµé—œé–‰ç‡ˆç®±
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
            const lightbox = document.getElementById('lightbox');
            if (lightbox.classList.contains('active')) {
                lightbox.classList.remove('active');
                document.body.style.overflow = 'auto';
            }
        }
    });

    // æ–°å¢ï¼šåœ¨é é¢è¼‰å…¥æ™‚ç”Ÿæˆåœ–ç‰‡ç•«å»Šï¼Œä¸¦æ›è¼‰é»æ“Šäº‹ä»¶
    document.addEventListener('DOMContentLoaded', () => {
        const galleryContainer = document.getElementById('gallery-container'); 
        if (galleryContainer) {
            illustrationThumbs.forEach((url, index) => {
                const imgElement = document.createElement('img');
                imgElement.src = url;
                imgElement.alt = `Illustration Thumbnail ${index + 1}`;
                imgElement.classList.add('gallery-item'); 
                imgElement.onclick = () => openLightbox(index); // é»æ“Šæ™‚æ‰“é–‹ç‡ˆç®±
                galleryContainer.appendChild(imgElement);
            });
        }
    });
</script>
