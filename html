    <script>
        // ä½œå“é›†çš„è™›æ“¬æ•¸æ“š (åœ¨å¯¦éš›æ‡‰ç”¨ä¸­ï¼Œé€™æœƒæ˜¯åœ–ç‰‡ URL å’Œæ¨™é¡Œ)
        const illustrationData = [
            { id: 0, content: 'ğŸ¨', title: 'è‰²å½©æ–‘æ–•çš„ç•«ä½œ' },
            { id: 1, content: 'ğŸ–Œï¸', title: 'æ•¸ä½ç¹ªåœ–ç­†è§¸' },
            { id: 2, content: 'âœï¸', title: 'é‰›ç­†ç´ æ' },
            { id: 3, content: 'ğŸ­', title: 'è§’è‰²è¨­è¨ˆ' },
            { id: 4, content: 'ğŸŒ¸', title: 'èŠ±å‰ç³»åˆ—' },
            { id: 5, content: 'ğŸ¦‹', title: 'è‡ªç„¶ç”Ÿæ…‹' },
            { id: 6, content: 'ğŸŒˆ', title: 'å¤¢å¹»è‰²å½©' },
            { id: 7, content: 'â­', title: 'æ˜Ÿè¾°ä¸»é¡Œ' },
            { id: 8, content: 'ğŸª', title: 'å¥‡å¹»é¦¬æˆ²åœ˜' },
        ];
        
        let currentIllustrationIndex = 0;

        /**
         * é¡¯ç¤ºæŒ‡å®š ID çš„é é¢ä¸¦æ›´æ–°å°èˆªç‹€æ…‹
         * @param {string} pageId - è¦é¡¯ç¤ºçš„é é¢ ID
         */
        function showPage(pageId) {
            // éš±è—æ‰€æœ‰é é¢
            const pages = document.querySelectorAll('.page');
            pages.forEach(page => page.classList.remove('active'));
            
            // é¡¯ç¤ºé¸ä¸­çš„é é¢
            const targetPage = document.getElementById(pageId);
            if (targetPage) {
                targetPage.classList.add('active');
            }
            
            // æ›´æ–°å°èˆªç‹€æ…‹
            const navLinks = document.querySelectorAll('.nav-link');
            navLinks.forEach(link => link.classList.remove('active'));
            const activeLink = document.querySelector(`[data-page="${pageId}"]`);
            if (activeLink) {
                activeLink.classList.add('active');
            }
            
            // æ‰‹æ©Ÿç‰ˆé—œé–‰é¸å–®
            if (window.innerWidth <= 768) {
                closeMenu();
            }
            
            // æ»¾å‹•åˆ°é ‚éƒ¨
            window.scrollTo(0, 0);
        }

        /**
         * åˆ‡æ›æ‰‹æ©Ÿç‰ˆå´é‚Šæ¬„çš„é¡¯ç¤º/éš±è—
         */
        function toggleMenu() {
            const sidebar = document.getElementById('sidebar');
            sidebar.classList.toggle('active');
        }

        /**
         * é—œé–‰æ‰‹æ©Ÿç‰ˆå´é‚Šæ¬„
         */
        function closeMenu() {
            if (window.innerWidth <= 768) {
                const sidebar = document.getElementById('sidebar');
                sidebar.classList.remove('active');
            }
        }
        
        /**
         * æ‰“é–‹ç‡ˆç®±ä¸¦é¡¯ç¤ºæŒ‡å®šç´¢å¼•çš„ä½œå“
         * @param {number} index - ä½œå“æ•¸æ“šä¸­çš„ç´¢å¼•
         */
        function openLightbox(index) {
            currentIllustrationIndex = index;
            updateLightboxContent();
            document.getElementById('lightbox').classList.add('active');
            // é˜»æ­¢èƒŒæ™¯æ»¾å‹•
            document.body.style.overflow = 'hidden';
        }

        /**
         * é—œé–‰ç‡ˆç®±
         * @param {Event} event - é»æ“Šäº‹ä»¶
         */
        function closeLightbox(event) {
            // åªæœ‰é»æ“Šé—œé–‰æŒ‰éˆ•ã€æˆ–é»æ“Šé»‘è‰²èƒŒæ™¯æ™‚æ‰é—œé–‰ (é˜²æ­¢é»æ“Šå°èˆªæŒ‰éˆ•æ™‚é—œé–‰)
            if (event.target.classList.contains('lightbox') || event.target.classList.contains('lightbox-close')) {
                document.getElementById('lightbox').classList.remove('active');
                // æ¢å¾©èƒŒæ™¯æ»¾å‹•
                document.body.style.overflow = '';
            }
        }
        
        /**
         * å°èˆªåˆ°ä¸Šä¸€å€‹/ä¸‹ä¸€å€‹ä½œå“
         * @param {number} direction - å°èˆªæ–¹å‘ (-1 ç‚ºä¸Šä¸€å€‹, 1 ç‚ºä¸‹ä¸€å€‹)
         * @param {Event} event - é»æ“Šäº‹ä»¶
         */
        function navigateLightbox(direction, event) {
            event.stopPropagation(); // é˜»æ­¢äº‹ä»¶å†’æ³¡åˆ° lightbox å®¹å™¨ (é¿å…é—œé–‰)
            
            const totalItems = illustrationData.length;
            currentIllustrationIndex += direction;
            
            // å¾ªç’°é¡¯ç¤º (åˆ°é ­å¾Œè·³åˆ°å°¾, åä¹‹äº¦ç„¶)
            if (currentIllustrationIndex < 0) {
                currentIllustrationIndex = totalItems - 1;
            } else if (currentIllustrationIndex >= totalItems) {
                currentIllustrationIndex = 0;
            }
            
            updateLightboxContent();
        }

        /**
         * æ›´æ–°ç‡ˆç®±å…§çš„åœ–ç‰‡å…§å®¹
         */
        function updateLightboxContent() {
            const data = illustrationData[currentIllustrationIndex];
            const contentDiv = document.getElementById('lightbox-content');
            
            // ä½¿ç”¨ placehold.co ç”¢ç”Ÿæ¨¡æ“¬çš„ 800x800 é«˜è§£æåº¦åœ–ç‰‡
            // åœ–ç‰‡ä¸Šæœƒé¡¯ç¤ºä½œå“åœ–ç¤ºå’Œæ¨™é¡Œ
            const imageUrl = `https://placehold.co/800x800/dcdcdc/2c2c2c?text=${encodeURIComponent(data.content + '\n\n' + data.title)}`;
            
            contentDiv.innerHTML = `
                <img src="${imageUrl}" alt="${data.title}" />
            `;
        }

        // DOM åŠ è¼‰å®Œæˆå¾Œï¼Œåˆå§‹åŒ–äº‹ä»¶ç›£è½å™¨
        document.addEventListener('DOMContentLoaded', () => {
            // 1. åˆå§‹åŒ–ä½œå“åœ–ç¤ºçš„é»æ“Šäº‹ä»¶
            const gridItems = document.querySelectorAll('.illustration-grid .illustration-item');
            gridItems.forEach((item, index) => {
                // ç¶å®šé»æ“Šäº‹ä»¶ä»¥æ‰“é–‹ç‡ˆç®±
                item.addEventListener('click', () => {
                    openLightbox(index);
                });
                // ç¢ºä¿æ‰‹æ©Ÿè§¸æ§ä¹Ÿèƒ½æ­£å¸¸é‹ä½œ
                item.addEventListener('touchstart', (event) => {
                    event.preventDefault(); 
                    openLightbox(index);
                });
            });
            
            // 2. é»æ“Šä¸»å…§å®¹å€åŸŸé—œé–‰æ‰‹æ©Ÿé¸å–® (é¿å…æ‰‹å‹•é—œé–‰)
            document.querySelector('.main-content').addEventListener('click', function(event) {
                // æ’é™¤ç‡ˆç®±é»æ“Šäº‹ä»¶
                if (!document.getElementById('lightbox').classList.contains('active')) {
                    closeMenu();
                }
            });
            
            // 3. é è¨­é¡¯ç¤º 'illustrations' é é¢
            showPage('illustrations');
        });
    </script>
</body>
</html>
